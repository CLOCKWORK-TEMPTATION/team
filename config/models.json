{
  "$schema": "./models.schema.json",
  "description": "Model configuration for repo-refactor-ai agents",
  "profiles": {
    "PLANNING": {
      "description": "Agents that analyze and plan refactoring steps (refactor-planner-report)",
      "models": [
        {
          "provider": "google",
          "model": "gemini-3.1-pro-preview",
          "params": {
            "thinkingConfig": { "thinkingLevel": "HIGH" }
          }
        }
      ]
    },
    "CODING": {
      "description": "Agents that generate code patches",
      "models": [
        {
          "provider": "openai",
          "model": "gpt-4.1",
          "params": { "reasoning_effort": "xhigh" }
        },
        {
          "provider": "anthropic",
          "model": "claude-opus-4-20250514",
          "params": { "thinking": "enabled" }
        }
      ]
    },
    "SUMMARIZE": {
      "description": "Agents that summarize and condense information",
      "models": [
        {
          "provider": "openai",
          "model": "gpt-4.1-mini",
          "params": { "reasoning_effort": "medium" }
        },
        {
          "provider": "anthropic",
          "model": "claude-haiku-3-20250514"
        }
      ]
    },
    "CONTRACTS_AUGMENT": {
      "description": "Agents that extract and augment API contracts",
      "models": [
        {
          "provider": "openai",
          "model": "gpt-4.1-mini",
          "params": { "reasoning_effort": "medium" }
        },
        {
          "provider": "anthropic",
          "model": "claude-haiku-3-20250514"
        }
      ]
    },
    "RISK_EXPLAIN": {
      "description": "Agents that explain risk assessments",
      "models": [
        {
          "provider": "openai",
          "model": "gpt-4.1-mini",
          "params": { "reasoning_effort": "medium" }
        },
        {
          "provider": "anthropic",
          "model": "claude-sonnet-4-20250514"
        }
      ]
    },
    "ANALYSIS": {
      "description": "طبقة LLM للتحليل (الخطوة 1) — scan-augment",
      "models": [
        {
          "provider": "anthropic",
          "model": "claude-sonnet-4-6",
          "params": {
            "thinking": { "type": "adaptive" },
            "output_config": { "effort": "medium" }
          }
        }
      ]
    }
  },
  "env_keys": {
    "openai": "OPENAI_API_KEY",
    "openai_compat": ["OPENAI_COMPAT_BASE_URL", "OPENAI_COMPAT_API_KEY"],
    "anthropic": "ANTHROPIC_API_KEY",
    "google": "GOOGLE_API_KEY",
    "mistral": "MISTRAL_API_KEY"
  }
}

{
  "name": "repo-refactor-ai",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "pnpm -C apps/desktop dev",
    "build": "pnpm -r build",

{
  "name": "repo-refactor-ai",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "pnpm -C apps/desktop dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "engine:scan": "pnpm -C packages/engine cli:scan",
    "engine:plan": "pnpm -C packages/engine cli:plan",
    "engine:apply": "pnpm -C packages/engine cli:apply",
    "engine:verify": "pnpm -C packages/engine cli:verify",
    "deps:check": "depcruise -c dependency-cruiser.js ."
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "vitest": "^3.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "eslint-plugin-boundaries": "^4.0.0",
    "globals": "^15.0.0",
    "dependency-cruiser": "^16.0.0"
  }
}

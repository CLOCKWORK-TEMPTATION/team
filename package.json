    "engine:apply": "pnpm -C packages/engine cli:apply",
    "engine:verify": "pnpm -C packages/engine cli:verify"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.3.2",
    "eslint": "^9.0.0",
    "eslint-plugin-boundaries": "^5.0.0",
    "globals": "^15.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.18"
  }
}